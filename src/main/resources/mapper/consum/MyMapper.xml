<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zysl.consum.mapper.MyMapper" >
  <resultMap id="BaseResultMap" type="com.zysl.consum.dao.Product" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="amount" property="amount" jdbcType="INTEGER" />
    <result column="mess" property="mess" jdbcType="VARCHAR" />
    <result column="price" property="price" jdbcType="DECIMAL" />
  </resultMap>

  <update id="updateProductAmount">
    update product set amount=amount-#{amount} where id=#{id}
  </update>

  <update id="updateOrderMony">
    update order_info set money=money-#{money} where id=#{id}
  </update>

</mapper>